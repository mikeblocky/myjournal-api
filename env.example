# Required Environment Variables
# Copy this file to .env and fill in your values

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# Database Configuration (REQUIRED)
MONGODB_URI=mongodb://localhost:27017/myjournal
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/myjournal

# CORS Configuration (Optional - defaults to allowing all origins)
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# AI Service Configuration (Optional - for AI features)
AI_PROVIDER=openai
AI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4o-mini

# News API Configuration (Optional - for news features)
NEWSAPI_KEY=your-newsapi-key
GNEWS_API_KEY=your-gnews-key

# App Configuration (Optional)
NODE_ENV=development
PORT=4000
ENABLE_JOBS=true
